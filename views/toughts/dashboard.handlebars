<div class="dashboard">
   <div class="title-container"> 
      <h2>Pensamentos</h2>
      <a href="/toughts/add" class="btn">Criar pensamento</a>
   </div>
   <h3>Seus pensamentos</h3>
   <ul>
      {{#each toughtsUser}}
         <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
               <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
               <form action="/toughts/delete" method="POST">
                  <input type="hidden" name="id" value="{{this.id}}">
                  <input type="submit" value="Excluir" class="btn">
               </form>
            </span>
         </li>
      {{/each}}
   </ul>
      {{#if toughtsUserVazia}}
         <p>Você ainda não possui pensamentos <a href="/toughts/add">Comece por aqui!</a></p>
      {{/if}}
</div>