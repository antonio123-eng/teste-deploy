<div class="auth-container">
   <h2>Cadastrar</h2>
   <form action="/register" method="POST">
      <div class="form-control">
         <label for="name">Nome:</label>
         <input type="text" placeholder="Digite seu nome" name="name" required>
      </div>

      <div class="form-control">
         <label for="email">E-mail:</label>
         <input type="email" placeholder="Digite seu email" name="email" required>
      </div>

      <div class="form-control">
         <label for="password">Senha:</label>
         <input type="password" placeholder="Digite sua senha" name="password" required>
      </div>

      <div class="form-control">
         <label for="confirmPassword">Confimação de Senha:</label>
         <input type="password" placeholder="Confirme sua senha" name="confirmPassword" required>
      </div>

      <input type="submit" value="Cadastrar">
      <p>Já tem conta? <a href="/login">Clique aqui</a></p>
   </form>
</div>